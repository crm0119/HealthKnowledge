<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/no_network"
    >

    <ImageView
        android:id="@+id/no_network_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="@color/white_d_d_d"
        android:paddingTop="5dp"
        android:textSize="13sp"
        android:id="@+id/no_network_textView"
        android:gravity="center"
        android:layout_below="@id/no_network_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/no_network_button"
        android:background="@drawable/news_no_network_click"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/no_network_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>